    @*// Initialize Restive.JS*@
    <script type="text/javascript">
        $(document).ready(function () {
            $('selector').restive(options);
        });
    </script>
    <style>
        .form_wrapper {
            background: none repeat scroll 0% 0% #FFF;
            border: 1px solid #DDD;
            margin: 0px auto;
            width: 250px;
            font-size: 16px;
            box-shadow: 1px 1px 7px #CCC;
        }

            .form_wrapper label {
                display: block;
                padding: 10px 30px 0px;
                margin: 10px 0px 0px;
            }

            .form_wrapper h3 {
                padding: 10px 30px 5px;
                margin: 10px 0px 5px;
                font-weight: bold;
            }

        label {
            display: inline-block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form_wrapper input[type="text"], .form_wrapper input[type="email"], .form_wrapper input[type="password"] {
            border: 1px solid #E5E5E5;
            border-top-width: 1px;
            border-bottom-width: 1px;
            border-top-style: solid;
            border-bottom-style: solid;
            border-top-color: #E5E5E5;
            border-bottom-color: #E5E5E5;
            -moz-border-top-colors: none;
            -moz-border-right-colors: none;
            -moz-border-bottom-colors: none;
            -moz-border-left-colors: none;
            border-image-source: none;
            border-image-slice: 100% 100% 100% 100%;
            border-image-width: 1 1 1 1;
            border-image-outset: 0 0 0 0;
            border-image-repeat: stretch stretch;
            margin: 5px 30px 0px;
            margin-top: 5px;
            padding: 9px;
            padding-top: 9px;
            padding-bottom: 9px;
            display: block;
            font-size: 16px;
            width: 80%;
            background: -moz-linear-gradient(center top, #FFF, #EEE 1px, #FFF 25px) repeat scroll 0% 0% transparent;
            background-color: transparent;
            background-image: -moz-linear-gradient(center top, #FFF, #EEE 1px, #FFF 25px);
            background-repeat: repeat;
            background-attachment: scroll;
            background-position: 0% 0%;
            background-clip: border-box;
            background-origin: padding-box;
            background-size: auto auto;
            box-shadow: 0px 0px 8px #F0F0F0;
        }
    </style>
</head>
