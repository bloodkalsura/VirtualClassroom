@{
    ViewBag.Title = "AllSubmittedAssignment";
}
@model List<Assignment>
@using ProjectVirtualClassroom.Models
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        .side-nav {
            position: fixed;
            top: 51px;
            left: 0px;
            width: 225px;
            /*margin-left: -225px;*/
            border: medium none;
            border-radius: 0px;
            overflow-y: auto;
            background-color: #222;
            bottom: 0px;
            overflow-x: hidden;
            padding-bottom: 40px;
        }

        .navbar-nav {
            float: left;
            margin: 0px;
        }

        .wrapper {
            padding-left: 15px;
            padding-right: 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" href="a">Virtual Classroom</a>
        </div>
        <div>
            <ul class="nav navbar-nav pull-right">
                <li><a href="~/Home/Index">Logout</a></li>
                @*<li><a href="a">About</a></li>
                    <li><a href="a">Team</a></li>
                    <li><a href="a">Contact</a></li>*@
            </ul>
        </div>
        <div>
            <ul class="nav navbar-nav side-nav list-groups">
                <li><a href="~/TeacherClassroom/Home">Home</a></li>
                <li><a href="~/TeacherClassroom/QnA">Questions &Answers</a></li>
                <li><a href="~/TeacherClassroom/AddPost">Add Announcement</a></li>
                <li><a href="~/TeacherClassroom/AddAssignment">Add Assignment</a></li>
                <li class="active"><a href="~/TeacherClassroom/AllSubmittedAssignment">All Assignment</a></li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="col-sm-3"></div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Submission Date</th>
                        <th>Open Assignment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Assignment c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.Title</td>
                            <td>@c.SubmissionDate</td>
                            <td>@Html.ActionLink("Open", "../TeacherClassroom/AllSubmittedAssignment1", new { id = c.Id, cid = c.CId })</td>
                            @*<td>@Html.ActionLink("Open", "~/TeacherClassroom/Home")</td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
