
@{
    ViewBag.Title = "ViewClassrooms";
    Layout = "~/Views/Teacher/Teacher.cshtml";
}
@model List<Classroom>
@using ProjectVirtualClassroom.Models
    <!DOCTYPE HTML>
    <html>
    <head>
        <title></title>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.js"></script>
        <style>
            .side-nav {
                position: fixed;
                top: 51px;
                left: 0px;
                width: 225px;
                /*margin-left: -225px;*/
                border: medium none;
                border-radius: 0px;
                overflow-y: auto;
                background-color: #222;
                bottom: 0px;
                overflow-x: hidden;
                padding-bottom: 40px;
            }

            .navbar-nav {
                float: left;
                margin: 0px;
            }

            .wrapper {
                padding-left: 15px;
                padding-right: 15px;
            }
        </style>
    </head>
    <body>
        <nav>
            <div class="navbar navbar-inverse" role="navigation">
                <ul class="nav navbar-nav side-nav list-groups">
                    <li class="active"><a href="~/Teacher/MyProfile">My Profile</a></li>
                    <li><a href="~/Teacher/Update">Update My Profile</a></li>
                    <li><a href="~/Teacher/AddClassroom">Add Classroom</a></li>
                    <li><a href="~/Teacher/DeleteClassroom">Delete Classroom</a></li>
                </ul>
            </div>
        </nav>
        <div align="center">
            <h3>View Classrooms</h3>
        </div>
        <div class="container-fluid">
            <div class="col-sm-3"></div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>View Classroom</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Classroom c in Model)
                        {
                            <tr>
                                <td>@c.Id</td>
                                <td>@c.Name</td>
                                @*<td><a href="~/TeacherClassroom/Home">Open</a></td>*@
                                <td>@Html.ActionLink("Open", "../TeacherClassroom/Home", new { id = c.Id })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>
