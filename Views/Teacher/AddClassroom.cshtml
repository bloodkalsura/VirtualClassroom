@{
    ViewBag.Title = "AddClassroom";
    Layout = "~/Views/Teacher/Teacher.cshtml";
}
@model ProjectVirtualClassroom.Models.Classroom
<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        .container-full {
            margin: 0 auto;
            width: 100%;
        }
        .row {
            width: 99.99%;
        }
        .container-fluid {
            padding: 0 15px;
        }
        .side-nav {
            position: fixed;
            top: 51px;
            left: 0px;
            width: 225px;
            /*margin-left: -225px;*/
            border: medium none;
            border-radius: 0px;
            overflow-y: auto;
            background-color: #222;
            bottom: 0px;
            overflow-x: hidden;
            padding-bottom: 40px;
        }

        .navbar-nav {
            float: left;
            margin: 0px;
            overflow-x: hidden;
        }
        .vertical-scrollbar {
            overflow-x: hidden; /*for hiding horizontal scroll bar*/
            overflow-y: auto; /*for vertical scroll bar*/
        }
    </style>
</head>
<body style="overflow-x: hidden">
    <nav>
        <div class="navbar navbar-inverse" role="navigation">
            <ul class="nav navbar-nav side-nav list-groups">
                <li><a href="~/Teacher/MyProfile">My Profile</a></li>
                <li><a href="~/Teacher/UpdateMyProfile">Update My Profile</a></li>
                <li class="active"><a href="~/Teacher/AddClassroom">Add Classroom</a></li>
                <li><a href="~/Teacher/DeleteClassroom">Delete Classroom</a></li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="/Teacher/AddClassroom1">
        <div class="form-group">
            <label class="control-label col-sm-3" for="name">Name:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Classroom name" required>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="pwd">Password:</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="pwd" name="password" placeholder="Enter password" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-6 col-sm-6">
                <button type="submit" class="btn btn-gray" style="background-color:lightgray">Submit</button>
            </div>
        </div>
    </form>
    </div>
</body>
</html>

