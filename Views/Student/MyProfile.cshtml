@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Student/Student.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        .side-nav {
            position: fixed;
            top: 51px;
            left: 0px;
            width: 225px;
            /*margin-left: -225px;*/
            border: medium none;
            border-radius: 0px;
            overflow-y: auto;
            background-color: #222;
            bottom: 0px;
            overflow-x: hidden;
            padding-bottom: 40px;
        }

        .navbar-nav {
            float: left;
            margin: 0px;
        }
    </style>
</head>
<body>
    <nav>
        <div class="navbar navbar-inverse" role="navigation">
            <ul class="nav navbar-nav side-nav list-groups">
                <li class="active"><a href="~/Student/MyProfile">My Profile</a></li>
                <li><a href="~/Student/UpdateStProfile">Update My Profile</a></li>
                <li><a href="~/Student/ViewAllClassroom">View All Classroom</a></li>
            </ul>
        </div>
    </nav>
    <div align="center">
        <h3>Welcome @Session["Name"]</h3>
    </div>

    <div id="page-wrapper">


        <div class="container-fluid">
            <div class="col-sm-4"></div>
            <div class="col-sm-4" style="height:300px; width: 400px;border:solid; border-color:black; border-radius:25px">
                <h3>Profile Details</h3> <br />
                <h4 style="margin-left:30px"> Name: @Session["SName"]</h4><br />
                <h5 style="margin-left:30px"> Degree: @Session["Degree"]</h5><br />
                <h5 style="margin-left:30px">University: @Session["University"]</h5><br />
                <h5 style="margin-left:30px">Contact: @Session["Email"]</h5><br />
            </div>
            <div class="col-sm-1"></div>
            <a href="~/Student/ViewClassroom">View Classroom</a>
        </div>
    </div>

</body>
</html>
