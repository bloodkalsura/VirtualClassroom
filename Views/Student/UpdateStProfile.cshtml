@{
    ViewBag.Title = "UpdateStProfile";
    Layout = "~/Views/Student/Student.cshtml";
}
<html>
<head>
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Script/bootstrap.js"></script>
    <style>
        .side-nav {
            position: fixed;
            top: 51px;
            left: 0px;
            width: 225px;
            /*margin-left: -225px;*/
            border: medium none;
            border-radius: 0px;
            overflow-y: auto;
            background-color: #222;
            bottom: 0px;
            overflow-x: hidden;
            padding-bottom: 40px;
        }

        .navbar-nav {
            float: left;
            margin: 0px;
        }
    </style>
</head>
<body>
    <nav>
        <div class="navbar navbar-inverse" role="navigation">
            <ul class="nav navbar-nav side-nav list-groups">
                <li><a href="~/Student/MyProfile">My Profile</a></li>
                <li class="active"><a href="~/Student/UpdateStProfile">Update My Profile</a></li>
                <li><a href="~/Student/ViewAllClassroom">View All Classroom</a></li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        @model ProjectVirtualClassroom.Models.Student
        @using (Html.BeginForm("UpdateStProfile", "Student/UpdateStProfile1", FormMethod.Post))
        {
             @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.Id)
            <div class="col-sm-3"></div>
            <div class="col-sm-1">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="col-sm-4">
                @Html.EditorFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div><br /><br />
            <div class="col-sm-3"></div>
    <div class="col-sm-1">
        @Html.LabelFor(m => m.Degree)
    </div>
            <div class="col-sm-4">
             @Html.EditorFor(m => m.Degree, new { style="height:50px; width:200px"})
                @Html.ValidationMessageFor(m => m.Degree)
             </div><br/><br/>
            <div class="col-sm-3"></div>
    <div class="col-sm-1">
        @Html.LabelFor(m => m.University)
    </div>
            <div class="col-sm-4">
             @Html.EditorFor(m => m.University, new { style="height:50px; width:200px"})
                @Html.ValidationMessageFor(m => m.University)
             </div><br/><br/>
<div class="col-sm-3"></div>
    <div class="col-sm-1">
        @Html.LabelFor(m => m.Email)
    </div>
            <div class="col-sm-4">
             @Html.EditorFor(m => m.Email, new { style="height:50px; width:200px"})
                @Html.ValidationMessageFor(m => m.Email)
             </div><br/><br/>
            <div class="col-sm-3"></div>
            <div class="col-sm-1">

                @Html.LabelFor(m => m.Password)
            </div>
            <div class="col-sm-4">
                @Html.EditorFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div><br /><br />

            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-offset-6 col-sm-6">
                    <button type="submit" class="btn btn-gray" style="background-color:lightgray">Save</button>
                </div>
            </div>
        }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</body>
</html>

