
@{
    ViewBag.Title = "ViewClassroom";
}
@model List<Classroom>
@using ProjectVirtualClassroom.Models
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        .side-nav {
            position: fixed;
            top: 51px;
            left: 0px;
            width: 225px;
            /*margin-left: -225px;*/
            border: medium none;
            border-radius: 0px;
            overflow-y: auto;
            background-color: #222;
            bottom: 0px;
            overflow-x: hidden;
            padding-bottom: 40px;
        }

        .navbar-nav {
            float: left;
            margin: 0px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" href="a">Virtual Classroom</a>
        </div>
        <div>
            <ul class="nav navbar-nav pull-right">
                <li><a href="~/Home/Index">Logout</a></li>
                @*<li><a href="a">About</a></li>
                    <li><a href="a">Team</a></li>
                    <li><a href="a">Contact</a></li>*@
            </ul>
        </div>
        <div>
            <ul class="nav navbar-nav side-nav list-groups">
                <li class="active"><a href="~/Student/MyProfile">My Profile</a></li>
                <li><a href="~/Student/UpdateStProfile">Update My Profile</a></li>
                <li><a href="~/Student/ViewAllClassroom">View All Classroom</a></li>
            </ul>
        </div>
    </nav>
    <div align="center">
        <h3>View Classrooms</h3>
    </div>
    <div class="container-fluid">
        <div class="col-sm-3"></div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>View Classroom</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Classroom c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.Name</td>
                            @*<td><a href="~/TeacherClassroom/Home">Open</a></td>*@
                            <td>@Html.ActionLink("Open", "../StudentClassroom/Home", new { id = c.Id })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
